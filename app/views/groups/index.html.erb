<header>
    <div>
        <%= image_tag 'menu.png', id: "menu-icon" %>
    </div>
    <div>
        Categories
    </div>
    <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
</header>

<% @groups.each do | group | %>
    <div class="group-card" >
        <%= link_to group_entities_path(group_id: group.id) do %>
            <%= image_tag url_for(group.icon), alt: "group icon" %>
            <div>
                <h2> <%= group.name %> </h2>
                <% if group && group.entities.present? %>
                    $ <%= group.entities.sum { |entity| entity[:amount] } %>
                <% else %>
                    $ 0
                <% end %>
            </div>
            <h3> <%= group.created_at %> </h3>
        <% end %>
    </div>
<% end %>

<footer>
    <%= link_to "add a new category", new_group_path %>  
</footer>